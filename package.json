{
	"name": "simple-static-boilerplate",
	"version": "0.0.1",
	"description": "Simple static HTML page with HTML5 Boilerplate and Tailwind CSS.",
	"license": "MIT",
	"author": "Cory Evan Wright <coryevan@gmail.com>",
	"scripts": {
		"serve": "cross-env NODE_ENV=development concurrently \"postcss public/css/main.css -o public/build/main.css --watch\"  \"live-server ./public\"",
		"development": "cross-env NODE_ENV=development postcss public/main.css -o public/build/main.css",
		"production": "cross-env NODE_ENV=production postcss public/main.css -o public/build/main.min.css",
		"start": "npm run serve"
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"cross-env": "^7.0.2",
		"cssnano": "^4.1.10",
		"live-server": "^1.2.1",
		"postcss-cli": "^7.1.1"
	},
	"dependencies": {
		"autoprefixer": "^9.8.6",
		"tailwindcss": "^1.9.6"
	}
}
